<span style="text-align: center; align-items: center;">
    <br/>
    <h2><%= shelf%></h2>
    <br></br>
    <div class="container-fluid" style="width: 100%;">
        <div class="row">
            <% if (empty) {%>
                <div style="width: 100%;">
                    <p>Empty Shelf</p>
                    <br/>
                    <a href="/books" target="_blank" class="btn btn-primary">Add Books</a>
                </div>
            <% } %>
            <% for (var i = 0; i < books.length; ++i ) {%>
                <div class="col-sm-4" style="padding: 20px;">
                    <div class="card align-items-center" style="width: 18rem; background: whitesmoke; margin: auto;">
                        <img src="<%= books[i].coverImageName%>" class="card-img-top" style="width: 150px; height: 225px; margin: 10px;" alt="<%= books[i].title%>">
                        <div class="card-body">
                          <h5 class="card-title"><%= books[i].title%></h5>
                          <p class="card-text book"><%= books[i].description %></p>
                          <a href="<%= books[i].link%>" target="_blank" class="btn btn-primary">View</a>
                        </div>
                    </div>
                </div>
            <% } %>
            
        </div>
    </div>
</span>
<style>
    .book {
        height: 120px;
        overflow: scroll;
    }
</style>